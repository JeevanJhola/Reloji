{
  "name": "reloji-root",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "client",
    "server"
  ],
  "scripts": {
    "start": "npm start --workspace=server",
    "client": "npm start --workspace=client",
    "dev": "concurrently \"npm run dev --workspace=server\" \"npm run dev --workspace=client\"",
    "build": "npm run build --workspace=client"
  },
  "devDependencies": {
    "concurrently": "^9.0.0"
  }
}
